// 手机端
@media (max-width: 767px)
    .layout
        box-sizing border-box
        font-size 20px
        min-height 100vh
        background-size cover
        background-repeat no-repeat
        background-attachment fixed
        overflow-x hidden
        background-image url('../assets/images/bg.jpg')
        .dynamic-header
            height 60px !important
        .rambler-content
            width 92%
            margin 0 auto
            display flex
            .aside
                width 300px
                margin-right 20px
            .con
                flex 1
                width 0
                transition all 0.5s
        .affix
            position fixed
            bottom 15px
            right 15px
            z-index 9999
            background-color #0000EE
// 电脑端
@media (min-width: 768px)
    .layout
        box-sizing border-box
        font-size 20px
        min-height 100vh
        background-size cover
        background-repeat no-repeat
        background-attachment fixed
        overflow-x hidden
        background-image url('../assets/images/bg.jpg')
        .rambler-content
            width 1300px
            margin 0 auto
            display flex
            position relative
            .aside
                width 300px
                margin-right 20px
                align-items flex-start
            .con
                flex 1
                width 0
                transition all 0.5s
        .affix
            position fixed
            bottom 25px
            right 25px
            z-index 9999
            background-color #0000EE
