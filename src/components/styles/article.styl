// 移动端
@media (max-width: 767px)
    .article-container
        padding 0!important
        .article-item
            margin-bottom 20px !important
            display block!important
            background #fff
            .cover
                width 100%!important
                img
                    width 100%!important
                .fake-cover
                    width 100%
                    height 254px
                    display flex
                    justify-content center
                    align-items center
                    background-color rgba(0,0,0,0.4)
                    color #fff
            .content
                padding 15px

// pc端
@media (min-width: 768px)
    .article-container
        .article-item
            display flex
            background #fff
            .cover
                overflow hidden
                width 300px
                height 200px
                margin-right 15px
                .fake-cover
                    width 300px
                    height 180px
                    display flex
                    justify-content center
                    align-items center
                    background-color rgba(0,0,0,0.4)
                    color #fff
                img
                    width 300px
                    height 180px
            .content
                flex 1
